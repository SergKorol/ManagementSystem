@model ShopManagementSystem.Dashboard.Models.ViewModels.ProductViewModel.ProductDetail
@{
    ViewData["Title"] = "Create shop";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-4 offset-lg-4">
        @using (Html.BeginForm("EditProduct", "Product", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-label">
                <div>
                    @Html.HiddenFor(m => m.ProductId, new { @class = "form-control", id = "productId", value = @Model.ProductId })
                </div>
                <div>
                    @Html.LabelFor(m => m.Name, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", value = @Model.Name })
                </div>
                <div class="btn-group" role="group" aria-label="Product">
                    <button type="submit" class="btn btn-success">Update</button>
                </div>
            </div>
        }
    </div>
</div>

