@model IEnumerable<ShopManagementSystem.Dashboard.Models.ViewModels.ShopViewModel.ShopView>
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container-fluid text-center">
    <div class="row justify-content-center">
        <div class="col-4">
            <h4 style="text-align: center">Users</h4>
            <div class="text-center" style="text-align: center">
                <div class="btn-group">
                    <a href="@Url.Action("CreateShopView", "Shop")" class="btn btn-primary">Create</a>
                </div>
            </div>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var shop in Model)
                {
                    <tr>
                        <th scope="row"><a href="@Url.Action("GetShopById", "Shop", new { id = shop.ShopId })">@shop.Title</a></th>
                        <td>@shop.Phone</td>
                        <td>
                            <a href="@Url.Action("EditShopView", "Shop", new { id = shop.ShopId })">Edit</a>
                            <br />
                            <a href="@Url.Action("DeleteShop", "Shop", new { id = shop.ShopId })">Delete</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>